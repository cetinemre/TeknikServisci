@model TeknikServisci.Models.ViewModels.RegisterViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kayıt Ol | Teknik Servisçi - Teknik Servisçiniz</title>
    <link rel="shortcut icon" href="~/assets/img/favicon.ico">
    <!--STYLESHEET-->
    <!--=================================================-->
    <!--Roboto Slab Font [ OPTIONAL ] -->
    <link href="https://fonts.googleapis.com/css?family=Roboto+Slab:400,300,100,700" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Roboto:500,400italic,100,700italic,300,700,500italic,400" rel="stylesheet">
    <!--Bootstrap Stylesheet [ REQUIRED ]-->
    <link href="~/assets/css/bootstrap.min.css" rel="stylesheet">
    <!--Jasmine Stylesheet [ REQUIRED ]-->
    <link href="~/assets/css/style.css" rel="stylesheet">
    <!--Font Awesome [ OPTIONAL ]-->
    <link href="~/assets/plugins/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <!--Switchery [ OPTIONAL ]-->
    <link href="~/assets/plugins/switchery/switchery.min.css" rel="stylesheet">
    <!--Bootstrap Select [ OPTIONAL ]-->
    <link href="~/assets/plugins/bootstrap-select/bootstrap-select.min.css" rel="stylesheet">
    <!--Demo [ DEMONSTRATION ]-->
    <link href="~/assets/css/demo/jasmine.css" rel="stylesheet">
    <!--SCRIPT-->
    <!--=================================================-->
    <!--Page Load Progress Bar [ OPTIONAL ]-->
    <link href="~/assets/plugins/pace/pace.min.css" rel="stylesheet">
    <script src="~/assets/plugins/pace/pace.min.js"></script>
</head>
<!--TIPS-->
<!--You may remove all ID or Class names which contain "demo-", they are only used for demonstration. -->
<body>
    <div id="container" class="cls-container">
        <!-- REGISTRATION FORM -->
        <!--===================================================-->
        <div class="lock-wrapper">
            <div class="panel lock-box">
                <div class="center"> <img alt="" src="~/assets/img/user.png" class="img-circle" /> </div>
                <h4>Merhaba!</h4>
                <p class="text-center">Teknik Servisçi deneyimini doyasıya yaşamak için aşağıdaki formu doldurarak yeni bir hesap oluşturun. Hem de ücretsiz!</p>
                <div class="row">
                    <div class="form-group col-md-12 col-sm-12 col-xs-12">
                        <div id="demo-error-container"></div>
                    </div>

                    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group col-md-12 col-sm-12 col-xs-12">

                            <div class="text-left">
                                @Html.LabelFor(x => x.Name, new { @class = "sr-only" })
                                @Html.TextBoxFor(x => x.Name, new { @class = "form-control", placeholder = "Ad" })
                            </div>
                        </div>
                        <div class="form-group col-md-12 col-sm-12 col-xs-12">

                            <div class="text-left">
                                @Html.LabelFor(x => x.Surname, new { @class = "sr-only" })
                                @Html.TextBoxFor(x => x.Surname, new { @class = "form-control", placeholder = "Soyad" })
                            </div>
                        </div>
                        <div class="form-group col-md-12 col-sm-12 col-xs-12">

                            <div class="text-left">
                                @Html.LabelFor(x => x.Phone, new { @class = "sr-only" })
                                @Html.TextBoxFor(x => x.Phone, new { @class = "form-control", placeholder = "Telefon" })
                            </div>
                        </div>

                        <div class="form-group col-md-12 col-sm-12 col-xs-12">
                            <div class="text-left">
                                @Html.LabelFor(x => x.UserName, new { @class = "sr-only" })
                                @Html.TextBoxFor(x => x.UserName, new { @class = "form-control", placeholder = "Kullanıcı Adı" })

                            </div>
                        </div>
                        <div class="form-group col-md-12 col-sm-12 col-xs-12">
                            <div class="text-left">
                                @Html.LabelFor(x => x.Email, new { @class = "sr-only" })
                                @Html.TextBoxFor(x => x.Email, new { @class = "form-control", placeholder = "E Mail", type = "email" })
                            </div>
                        </div>
                        <div class="form-group col-md-12 col-sm-12 col-xs-12">
                            <div class="text-left">
                                @Html.LabelFor(x => x.Password, new { @class = "sr-only" })
                                @Html.TextBoxFor(x => x.Password, new { @class = "form-control", placeholder = "Şifre", type = "password" })
                            </div>
                        </div>
                        <div class="form-group col-md-12 col-sm-12 col-xs-12">
                            <div class="text-left">
                                @Html.LabelFor(x => x.ConfirmPassword, new { @class = "sr-only" })
                                @Html.TextBoxFor(x => x.ConfirmPassword, new { @class = "form-control", placeholder = "Şifre Tekrar", type = "password" })
                            </div>
                        </div>
                        <button type="submit" class="btn btn-app btn-block">Kayıt Ol</button>
                    }
                </div>
            </div>
            <div class="registration"> Hesabım var diyorsan: @Html.ActionLink("Giriş Yap", "Index") </div>
        </div>
        <!--===================================================-->
        <!-- REGISTRATION FORM -->
    </div>
    <!--===================================================-->
    <!-- END OF CONTAINER -->
    <!--JAVASCRIPT-->
    <!--=================================================-->
    <!--jQuery [ REQUIRED ]-->
    <script src="~/assets/js/jquery-2.1.1.min.js"></script>
    <script src="~/assets/js/bootstrap.min.js"></script>
    <script src="~/assets/plugins/fast-click/fastclick.min.js"></script>
    <script src="~/assets/plugins/switchery/switchery.min.js"></script>
    <script src="~/assets/plugins/bootstrap-select/bootstrap-select.min.js"></script>
    <script src="~/assets/plugins/bootstrap-validator/bootstrapValidator.min.js"></script>
    <script src="~/assets/js/demo/pages-register.js"></script>
</body>
</html>
